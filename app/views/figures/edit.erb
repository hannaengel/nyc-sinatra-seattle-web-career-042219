
<% require 'pry' %>
<form action="/figures/<%=@figure.id%>" method="post">
  <input id="hidden" type="hidden" name="_method" value="patch">

<label> Name:</label>
<input type="text" name="figure[name]" id="figure_name" value="<%=@figure.name%>">
<p>Titles</p>
    <%@titles.each do |title| %>
    <input type="checkbox" name="figure[title_ids][]" value="<%=title.id%>" id="title_<%=title.id%>"> <%=title.name%>
    <%='checked' if @figure.titles.include?(title)%>></input>
    <br>
    <%end%>
  <br>
  <br>
    <label>Create New Title:</label>
    <br>
    <input type="text" name="title[name]" id="new_title">

    <p>Landmarks</p>
    <%@landmarks.each do |landmark| %>
    <input type="checkbox"
    name="figure[landmark_ids][]" id="landmark_<%=landmark.id%>"><%=landmark.name%>
    value="<%=landmark.id%>"
    <%='checked' if @figure.landmarks.include?(landmark)%>>
    </input>
    <br>
    <%end%>

  <br>
  <br>
  <label> Create New Landmark:</label>
  <br>
  <label>Name:</label>

  <input type="text" name="landmark[name]" id="new_landmark" >
  <label>Year:</label>
  <input type="text" name="landmark[year_completed]" id="landmark_year" >
<input type="submit" name="" value="Edit Figure">
</form>
