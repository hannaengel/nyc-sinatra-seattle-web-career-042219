<% require 'pry' %>

<form class="" action="/figures" method="post">
  <label> Name:</label>
  <input type="text" name="figure[name]" id="figure_name">
  <p>Titles</p>
  <%@titles.each do |title| %>

  <input type="checkbox" name="figure[title_ids][]" value="<%=title.id%>" id="title_<%=title.id%>"> <%=title.name%><br></input>
  <%end%>
<br>
<br>
  <label>Create New Title:</label>
  <br>
  <input type="text" name="title[name]" id="new_title">

  <p>Landmarks</p>
  <%@landmarks.each do |landmark| %>
  <input type="checkbox" name="figure[landmark_ids][]" value="<%=landmark.id%>" id="landmark_<%=landmark.id%>"> <%=landmark.name%><br></input>
  <%end%>

<br>
<br>
<label> Create New Landmark:</label>
<br>
<label>Name:</label>
<input type="text" name="landmark[name]" id="new_landmark">
<label>Year:</label>
<input type="text" name="landmark[year_completed]" id="landmark_year">
<input type="submit" value="Create New Figure">

</form>
